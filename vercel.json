{
  "builds": [
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "dist/**/*", "use": "@vercel/static" } // Serve todos os arquivos gerados na pasta dist
  ],
  "routes": [
    { "src": "/", "dest": "/index.html" },
    { "src": "/tailwind.css", "dest": "/assets/css/tailwind.css" },
    { "src": "/main.js", "dest": "/main.js" },
    { "src": "/fonts.css", "dest": "/assets/css/fonts.css" },
    { "src": "/images/(.*)", "dest": "/assets/images/$1" }
  ]
}